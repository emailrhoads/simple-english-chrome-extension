{
  "manifest_version": 3,
  "name": "Simple English Extension",
  "version": "1.0",
  "description": "Displays any website in simple English",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
